<Window x:Class="AndroidRecoveryTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AndroidRecoveryTool"
        Title="Android File Recovery Tool" Height="700" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource CardBrush}" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <MenuItem Header="Device">
                <MenuItem Header="Unlock Screen" Click="MenuUnlockScreen_Click" Icon="🔓"/>
                <Separator/>
                <MenuItem Header="Refresh Devices" Click="BtnRefreshDevices_Click" Icon="🔄"/>
                <MenuItem Header="Restart ADB Server" Click="BtnRestartAdb_Click" Icon="🔄"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="MenuAbout_Click" Icon="ℹ️"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" Padding="20" Margin="20,20,20,20">
            <StackPanel>
                <TextBlock Text="Android Deleted Files Recovery" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Recover deleted photos, videos, documents, and more from your Android device" 
                          FontSize="12" Foreground="White" Opacity="0.9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Device Panel -->
            <Border Grid.Column="0" Background="{StaticResource CardBrush}" Padding="15" Margin="0,0,10,0" 
                   BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Connected Devices" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Button x:Name="btnRefreshDevices" Content="🔄 Refresh Devices" Click="BtnRefreshDevices_Click" 
                           Margin="0,0,0,10" Background="{StaticResource AccentBrush}" Foreground="White"/>
                    
                    <Button x:Name="btnRestartAdb" Content="🔄 Restart ADB Server" Click="BtnRestartAdb_Click" 
                           Margin="0,0,0,5" Background="{StaticResource PrimaryBrush}" Foreground="White" FontSize="11"/>
                    
                    <Button x:Name="btnRevokeAuth" Content="🔐 Revoke Authorization" Click="BtnRevokeAuth_Click" 
                           Margin="0,0,0,15" Background="#FF9800" Foreground="White" FontSize="11" IsEnabled="False"/>
                    
                    <ListBox x:Name="lstDevices" SelectionChanged="LstDevices_SelectionChanged" 
                            Height="200" BorderBrush="#E0E0E0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding DeviceName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DeviceId}" FontSize="11" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Status}" FontSize="11" Foreground="{Binding StatusColor}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Separator Margin="0,15,0,15"/>

                    <TextBlock Text="Recovery Options" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="chkPhotos" Content="Photos (JPG, PNG)" IsChecked="True" Margin="0,5"/>
                    <CheckBox x:Name="chkVideos" Content="Videos (MP4, AVI)" IsChecked="True" Margin="0,5"/>
                    <CheckBox x:Name="chkDocuments" Content="Documents (PDF, DOC)" IsChecked="True" Margin="0,5"/>
                    <CheckBox x:Name="chkAudio" Content="Audio (MP3, WAV)" IsChecked="False" Margin="0,5"/>
                    <CheckBox x:Name="chkOther" Content="Other Files" IsChecked="False" Margin="0,5"/>

                    <Separator Margin="0,15,0,15"/>

                    <TextBlock Text="Storage Path" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtStoragePath" Text="/sdcard" Margin="0,0,0,10"/>
                    
                    <Button x:Name="btnStartScan" Content="🔍 Start Recovery Scan" 
                           Click="BtnStartScan_Click" IsEnabled="False"
                           Background="{StaticResource SecondaryBrush}" Foreground="White" Margin="0,5,0,5"/>
                    
                    <Button x:Name="btnStopScan" Content="⏹ Stop Scan" 
                           Click="BtnStopScan_Click" IsEnabled="False" Margin="0,5,0,5"/>
                </StackPanel>
            </Border>

            <!-- File List and Preview Panel -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- File List Panel -->
                <Border Grid.Column="0" Background="{StaticResource CardBrush}" Padding="15" Margin="0,0,5,0" 
                       BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Recovered Files" FontSize="18" FontWeight="Bold"/>
                            <TextBlock x:Name="txtFileCount" Text=" (0 files)" FontSize="18" Margin="10,0,0,0" 
                                      Foreground="{StaticResource PrimaryBrush}"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="dgFiles" BorderBrush="#E0E0E0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="180" Height="220" Margin="5" Padding="8" 
                                               Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                               Cursor="Hand" MouseLeftButtonUp="Thumbnail_MouseLeftButtonUp"
                                               Tag="{Binding}">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Checkbox at top right -->
                                                <CheckBox Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                         Checked="Thumbnail_Checked" Unchecked="Thumbnail_Unchecked"
                                                         Click="Thumbnail_Checkbox_Click"/>

                                                <!-- Thumbnail Image/Icon -->
                                                <Border Grid.Row="1" Width="160" Height="120" Margin="0,0,0,5"
                                                       Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1">
                                                    <Grid>
                                                        <!-- Image thumbnail for photos/videos -->
                                                        <Image x:Name="imgThumbnail" Stretch="Uniform" 
                                                              Source="{Binding ThumbnailPath}" 
                                                              HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>
                                                        
                                                        <!-- Placeholder icon/text for documents/audio/other -->
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <StackPanel.Style>
                                                                <Style TargetType="StackPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </StackPanel.Style>
                                                            <TextBlock FontSize="36" HorizontalAlignment="Center" 
                                                                      Foreground="#CCCCCC" FontWeight="Bold">
                                                                <TextBlock.Text>
                                                                    <Binding Path="FileType">
                                                                        <Binding.Converter>
                                                                            <local:FileTypeToIconConverter/>
                                                                        </Binding.Converter>
                                                                    </Binding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding FileType}" FontSize="10" 
                                                                      Foreground="#999999" HorizontalAlignment="Center" 
                                                                      Margin="0,5,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!-- File Name -->
                                                <TextBlock Grid.Row="2" Text="{Binding FileName}" 
                                                          TextWrapping="Wrap" FontSize="11" FontWeight="SemiBold"
                                                          MaxHeight="35" TextTrimming="CharacterEllipsis" Margin="0,0,0,3"/>

                                                <!-- File Info -->
                                                <StackPanel Grid.Row="3" Orientation="Vertical">
                                                    <TextBlock Text="{Binding FileType}" FontSize="9" Foreground="Gray" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding FileSize}" FontSize="9" Foreground="Gray" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding RecoveryStatus}" FontSize="9" Foreground="Gray"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Border Grid.Row="2" Background="#FFF3E0" Padding="10" Margin="0,15,0,0" 
                               BorderBrush="#FFB74D" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Recovery Actions:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnRecoverSelected" Content="💾 Recover Selected" 
                                           Click="BtnRecoverSelected_Click" IsEnabled="False"
                                           Background="{StaticResource AccentBrush}" Foreground="White" Margin="0,0,10,0"/>
                                    <Button x:Name="btnRecoverAll" Content="💾 Recover All" 
                                           Click="BtnRecoverAll_Click" IsEnabled="False"
                                           Background="{StaticResource AccentBrush}" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="txtProgress" Text="" VerticalAlignment="Center" 
                                              Foreground="{StaticResource SecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Preview Panel -->
                <Border Grid.Column="1" Background="{StaticResource CardBrush}" Padding="15" 
                       BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Hidden host for media-based thumbnail extraction -->
                            <RowDefinition Height="0"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="File Preview" FontSize="18" FontWeight="Bold"/>
                            <TextBlock x:Name="txtPreviewLoadingStatus" Text="" FontSize="12" Foreground="Gray" 
                                      Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <StackPanel x:Name="pnlPreview">
                                <!-- Image Preview -->
                                <Border Background="#F9F9F9" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,15">
                                    <Image x:Name="imgPreview" Stretch="Uniform" MaxHeight="500" MaxWidth="500" 
                                          Visibility="Collapsed" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <!-- Video Preview -->
                                <Border x:Name="pnlVideoPreview" Background="#F9F9F9" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1" 
                                       Visibility="Collapsed" Margin="0,0,0,15">
                                    <StackPanel>
                                        <Border HorizontalAlignment="Center" MaxWidth="600" MaxHeight="400">
                                            <MediaElement x:Name="mediaVideoPreview" LoadedBehavior="Manual" UnloadedBehavior="Stop" 
                                                         Stretch="Uniform" MaxHeight="400" MaxWidth="600" 
                                                         HorizontalAlignment="Center" MediaEnded="MediaVideoPreview_MediaEnded"
                                                         MediaOpened="MediaVideoPreview_MediaOpened">
                                                <MediaElement.RenderTransform>
                                                    <RotateTransform x:Name="videoRotateTransform" Angle="0" CenterX="0.5" CenterY="0.5"/>
                                                </MediaElement.RenderTransform>
                                                <MediaElement.RenderTransformOrigin>
                                                    <Point X="0.5" Y="0.5"/>
                                                </MediaElement.RenderTransformOrigin>
                                            </MediaElement>
                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                            <Button x:Name="btnPlayVideo" Content="▶ Play" Click="BtnPlayVideo_Click" Margin="0,0,5,0" 
                                                   Padding="10,5" Background="{StaticResource AccentBrush}" Foreground="White"/>
                                            <Button x:Name="btnPauseVideo" Content="⏸ Pause" Click="BtnPauseVideo_Click" Margin="0,0,5,0" 
                                                   Padding="10,5" Background="{StaticResource PrimaryBrush}" Foreground="White"/>
                                            <Button x:Name="btnStopVideo" Content="⏹ Stop" Click="BtnStopVideo_Click" Padding="10,5" 
                                                   Background="#FF5722" Foreground="White"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Text Preview -->
                                <Border x:Name="pnlTextPreview" Visibility="Collapsed" 
                                       Background="#F9F9F9" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1" 
                                       MaxHeight="400" Margin="0,0,0,15">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBlock x:Name="txtPreview" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
                                    </ScrollViewer>
                                </Border>

                                <!-- File Info Preview -->
                                <StackPanel x:Name="pnlFileInfo" Visibility="Visible">
                                    <TextBlock x:Name="txtPreviewFileName" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <Separator Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="File Type:" FontWeight="Bold" Margin="0,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtPreviewType" Margin="10,5,0,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="File Size:" FontWeight="Bold" Margin="0,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtPreviewSize" Margin="10,5,0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Path:" FontWeight="Bold" Margin="0,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtPreviewPath" TextWrapping="Wrap" Margin="10,5,0,5"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtPreviewStatus" Margin="10,5,0,5"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Device Path:" FontWeight="Bold" Margin="0,5"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtPreviewDevicePath" TextWrapping="Wrap" Margin="10,5,0,5"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <TextBlock Grid.Row="2" x:Name="txtNoPreview" Text="Select a file to preview" 
                                  FontSize="14" Foreground="Gray" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" Margin="0,15,0,0"/>

                        <!-- Hidden media host for extracting video thumbnails -->
                        <Grid Grid.Row="3" x:Name="hiddenMediaHost" Visibility="Hidden" Opacity="0.01" Width="640" Height="360"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#EEEEEE" Padding="10" Margin="20,20,20,0">
            <TextBlock x:Name="txtStatus" Text="Ready. Connect your Android device via USB and enable USB debugging." 
                      FontSize="12"/>
        </Border>
    </Grid>
</Window>

